<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/listviewLayout_word"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:layout_editor_absoluteY="81dp">

    <TextView
        android:id="@+id/txtView_familiarity"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:layout_marginTop="4dp"
        android:text="FI "
        android:textSize="14sp"
        app:layout_constraintEnd_toStartOf="@+id/checkBox_word"
        app:layout_constraintTop_toBottomOf="@+id/txtView_numX" />

    <ImageView
        android:id="@+id/icon_word"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:scaleType="centerCrop"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/wordName"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:fontFamily="sans-serif"
        android:text=""
        android:textSize="20sp"
        android:textStyle="normal"
        android:typeface="normal"
        app:layout_constraintEnd_toStartOf="@+id/txtView_numO"
        app:layout_constraintStart_toEndOf="@+id/icon_word"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/memoText_word"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_marginTop="2dp"
        android:text=""
        android:textColor="@color/colorPrimaryDark"
        android:textSize="14sp"
        app:layout_constraintEnd_toStartOf="@+id/txtView_familiarity"
        app:layout_constraintStart_toEndOf="@+id/icon_word"
        app:layout_constraintTop_toBottomOf="@+id/wordName" />

    <CheckBox
        android:id="@+id/checkBox_word"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="8dp"
        android:layout_marginTop="8dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/txtView_numO"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="O"
        android:textColor="@android:color/holo_green_dark"
        app:layout_constraintEnd_toStartOf="@+id/textView11"
        app:layout_constraintTop_toTopOf="@+id/txtView_numX" />

    <TextView
        android:id="@+id/txtView_numX"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:text="X"
        android:textColor="@color/colorPrimary"
        app:layout_constraintEnd_toStartOf="@+id/checkBox_word"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView11"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="/"
        app:layout_constraintEnd_toStartOf="@+id/txtView_numX"
        app:layout_constraintTop_toTopOf="@+id/txtView_numX" />

</android.support.constraint.ConstraintLayout>
